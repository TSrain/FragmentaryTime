<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/nav_icon"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Lawrence"
                    android:textSize="25dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#ccc"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="关注数:"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="28"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="#ccc" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="粉丝数:"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingTop="10dp"
                            android:text="577"
                            android:textSize="15sp" />
                    </LinearLayout>
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="10dp"
      android:padding="1px"
      android:background="@drawable/bg_layout_shape">
    <LinearLayout
        android:id="@+id/jianjie"
        style="@style/mid_layout"
        >
        <ImageView
            style="@style/img_smallicon"
            android:src="@drawable/person_qianming" />

        <TextView style="@style/usertext" android:text="  个人简介：" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课余时间充裕的在校大学生 "/>

        <ImageView style="@style/img_arrow"/>
        </LinearLayout>

          <View style="@style/bg_line" />

      <LinearLayout style="@style/mid_layout">

          <ImageView
             style="@style/img_smallicon"
              android:src="@drawable/xinyu_tubiao" />

          <TextView
              style="@style/usertext"
              android:text="  信誉" />

          <ImageView style="@style/img_arrow" />
      </LinearLayout>
      <View style="@style/bg_line" />
      <LinearLayout style="@style/mid_layout">
          <ImageView
              style="@style/img_smallicon"
              android:src="@drawable/free_time_icon" />

          <TextView style="@style/usertext" android:text="  本周零时" />
          <ImageView style="@style/img_arrow"/>
      </LinearLayout>
      <View style="@style/bg_line" />
      <LinearLayout style="@style/mid_layout">
          <ImageView
              style="@style/img_smallicon"
              android:src="@drawable/shanchangjineng2" />

          <TextView style="@style/usertext" android:text="  我的技能" />
          <ImageView style="@style/img_arrow" />
      </LinearLayout>
      <View style="@style/bg_line" />
      <LinearLayout
          android:id="@+id/gengduoziliao"
          style="@style/mid_layout">
          <ImageView
              style="@style/img_smallicon"
              android:src="@drawable/gengduoziliao_tubiao" />
          <TextView style="@style/usertext" android:text="  更多资料" />
          <ImageView style="@style/img_arrow"/>
      </LinearLayout>
</LinearLayout>
</LinearLayout>

